<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Challenge 19 - BREAD Express</title>
    <link defer rel="stylesheet" href="/views/styles.css"/>
    <script defer src="/script/index.js"></script>
  </head>
  <body>
    <header class="header-title">
      <h1 class="header-title">BREAD(Browse, Read, Edit, Add, Delete)</h1>
    </header>
    <main>
      <section id="index-form" class="first-section">
        <h2>Filter</h2>
        <form action="/search" method="GET">
          <fieldset>
            <div>
              <input
                type="checkbox"
                id="enable-id"
                checked
              />
              <label 
              for="enable-id" 
              enable-id=""
              class="first-section-label">
                ID</label
              >
              <input
                type="text"
                name="id"
                id="input-id"
                enable-id=""
                placeholder="ID"
                value="<%= filter.id ? filter.id: '' %>"
              />
            </div>
            <div>
              <input
                type="checkbox"
                id="enable-string"
                checked
              />
              <label
                for="enable-string"
                enable-string=""
                class="first-section-label"
              >
                String</label
              >
              <input
                type="text"
                name="string"
                id="input-string"
                enable-string=""
                placeholder="String"
                value="<%= filter.string ? filter.string : '' %>"
              />
            </div>
            <div>
              <input
                type="checkbox"
                id="enable-integer"
                checked
              />
              <label
                for="enable-integer"
                enable-integer=""
                class="first-section-label"
              >
                Integer</label
              >
              <input
                type="number"
                name="integer"
                id="input-integer"
                enable-integer=""
                placeholder="Integer"
                value="<%= filter.integer ? filter.integer : '' %>"
              />
            </div>
            <div>
              <input
                type="checkbox"
                id="enable-float"
                checked
              />
              <label
                for="enable-float"
                enable-float=""
                class="first-section-label"
              >
                Float</label
              >
              <input
                type="number"
                name="float"
                id="input-float"
                enable-float=""
                placeholder="Float"
                step="any"
                value="<%= filter.float ? filter.float : '' %>"
              />
            </div>
            <div>
              <input
                type="checkbox"
                id="enable-date"
                checked
              />
              <label
                for="enable-date"
                enable-date=""
                class="first-section-label"
              >
                Date</label
              >
              <input 
              type="date" 
              name="date" 
              id="input-date" 
              enable-date=""
              value="<%= filter.date ? filter.date : '' %>"
              />
            </div>
            <div>
              <input
                type="checkbox"
                id="enable-boolean"
                checked
              />
              <label
                for="enable-boolean"
                enable-boolean=""
                class="first-section-label"
              >
                Boolean</label
              >
              <input
                type="number"
                name="boolean"
                id="input-boolean"
                enable-boolean=""
                min="0"
                max="1"
                placeholder="Choose the boolean ..."
                value="<%= filter.boolean ? filter.boolean : '' %>"
              />
            </div>
          </fieldset>
          <button
            type="submit"
            id="search-button"
            class="btn btn-info"
            disabled
          />Search</button>
        </form>
      </section>
      <section class="second-section">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">String</th>
              <th scope="col">Integer</th>
              <th scope="col">Float</th>
              <th scope="col">Date</th>
              <th scope="col">Boolean</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((item) => { %>
            <tr>
              <th scope="row"><%= item.ID %></th>
              <td><%= item.String %></td>
              <td><%= item.Integer %></td>
              <td><%= item.Float %></td>
              <td><%= item.Date %></td>
              <td><%= item.Boolean %></td>
              <td>
                <a href="/edit/<%= item.ID %>" style="color: white">
                  <button type="button" class="btn btn-success" />Edit </button>
                </a>
                <a href="/delete/<%= item.ID %>" style="color: white">
                  <button type="button" class="btn btn-danger" onclick="return confirm('Delete ?')"/>Delete
                </button>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <br />
        <input type="button" value="Pagination" id="pagination">
        <br />
      </section>
    </main>
    <section>
      <br />
      <a href="/add" class="btn btn-primary">Add</a>
    </section>
  </body>
</html>